@*<div class="container body-content">*@

<h3 class=" p-3 bg-secondary text-light text-center border border-info">@ViewBag.title</h3>
<br />
@if (ViewBag.jobs.Count == 0)
{
    <p>** No entries **</p>
}
else if (ViewBag.jobs.Count == 1)
{
    <p>** <span class="text-danger">1</span> entry **</p>
}
else
{
    <p>** <span class="text-danger">@ViewBag.jobs.Count</span> entries **</p>
}

@{
    //TODO #1: Use a loop to display job results in a table.
}

<div class="container">
    <div class="row">
        @foreach (var job in ViewBag.jobs)
        {

            <div class="col-md-4 ">
                <div class="card border border-warning m-2">
                    <div class="card-header bg-info text-light">ID: @job.Id</div>
                    <div class="list-group list-group-flush">
                        <a class="list-group-item"><span class="text-info">Name:</span> @job.Name</a>
                        <a class="list-group-item list-group-item-action" asp-controller="List" asp-action="Jobs" asp-route-column="employer" asp-route-value="@job.Employer"><span class="text-info">Employer: </span>@job.Employer</a>
                        <a class="list-group-item list-group-item-action bg-light" asp-controller="List" asp-action="Jobs" asp-route-column="location" asp-route-value="@job.Location"><span class="text-info">Location: </span>@job.Location</a>
                        <a class="list-group-item list-group-item-action" asp-controller="List" asp-action="Jobs" asp-route-column="positionType" asp-route-value="@job.PositionType"><span class="text-info text-danger">Position Type: </span>@job.PositionType</a>
                        <a class="list-group-item list-group-item-action bg-light" asp-controller="List" asp-action="Jobs" asp-route-column="coreCompetency" asp-route-value="@job.CoreCompetency"><span class="text-info">Skill: </span>@job.CoreCompetency</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
